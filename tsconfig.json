{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],
      "@components/*": [
        "./resources/js/components/*"
      ],
      "@assets/*": [
        "./resources/assets/*"
      ],
      "@api/*": [
        "./resources/js/api/*"
      ],
      "@layouts/*": [
        "./resources/js/Layouts/*"
      ],
      "@pages/*": [
        "./resources/js/Pages/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "resources/**/*.ts",
    "resources/**/*.d.ts",
    "resources/**/*.tsx",
    "resources/**/*.vue"
  ]
}