{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "resources/old_scripts/*"
      ],
      "@client/*": [
        "./resources/client/*"
      ],
      "@admin/*": [
        "./resources/admin/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./resources/**/*.ts",
    "./resources/**/*.tsx",
    "./resources/**/*.vue",
    "./resources/**/*.ts",
    "./resources/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./resources/old_scripts/",
    "./resources/old_scripts/**/*.*",
  ]
}
